@model IEnumerable<RCPatients.Models.PatientTreatment>

@{
    ViewData["Title"] = "Treatments for " + ViewData["diagnosisName"] + ", Patient: " + ViewData["LName"] + ", " + ViewData["FName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-route-diagnosisName="@ViewData["diagnosisName"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatePrescribed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDiagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treatment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePrescribed)
            </td>
            <td>
                <textarea class="form-control" rows="3" cols="30" disabled>@Html.DisplayFor(modelItem => item.Comments)</textarea>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientDiagnosis.PatientDiagnosisId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientTreatmentId" asp-route-diagnosisName = "@ViewData["diagnosisName"]">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PatientTreatmentId" asp-route-diagnosisName = "@ViewData["diagnosisName"]">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PatientTreatmentId" asp-route-diagnosisName = "@ViewData["diagnosisName"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
